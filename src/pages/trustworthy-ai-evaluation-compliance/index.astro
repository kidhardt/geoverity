---
import BasePageEn from "@/layouts/BasePageEn.astro";
import { t } from '@/i18n';
const lang = 'en';
const pageMeta = { title: "Trustworthy AI Evaluation & Compliance - GeoVerity", description: "Independent evaluation of AI model performance and compliance.", translationStatus: "approved", lastReviewed: new Date().toISOString() };
---
<BasePageEn {...pageMeta}>
<article>
<section class="hero" aria-labelledby="hero-heading"><h1 id="hero-heading">{t(lang, 'evaluation.heroHeading')}</h1><p class="hero-subheading">{t(lang, 'evaluation.heroSubheading')}</p></section>
<section class="content-section" aria-labelledby="problem-heading"><h2 id="problem-heading">{t(lang, 'evaluation.problemHeading')}</h2><p>{t(lang, 'evaluation.problemPara1')}</p><p>{t(lang, 'evaluation.problemPara2')}</p></section>
<section class="content-section" aria-labelledby="approach-heading"><h2 id="approach-heading">{t(lang, 'evaluation.approachHeading')}</h2><p>{t(lang, 'evaluation.approachPara1')}</p><p>{t(lang, 'evaluation.approachPara2')}</p></section>
<section class="content-section offerings" aria-labelledby="offerings-heading"><h2 id="offerings-heading">{t(lang, 'evaluation.offeringsHeading')}</h2>
<div class="offering"><h3>{t(lang, 'evaluation.performanceHeading')}</h3><p>{t(lang, 'evaluation.performanceText')}</p></div>
<div class="offering"><h3>{t(lang, 'evaluation.fairnessHeading')}</h3><p>{t(lang, 'evaluation.fairnessText')}</p></div>
<div class="offering"><h3>{t(lang, 'evaluation.complianceHeading')}</h3><p>{t(lang, 'evaluation.complianceText')}</p></div>
<div class="offering"><h3>{t(lang, 'evaluation.safetyHeading')}</h3><p>{t(lang, 'evaluation.safetyText')}</p></div>
</section>
</article>
</BasePageEn>
<style>article{max-width:var(--content-width,70ch);margin-inline:auto}.hero{padding:var(--space-xl) var(--space-md);text-align:center;margin-bottom:var(--space-lg)}.hero h1{font-size:var(--font-size-xxxl);margin-bottom:var(--space-sm)}.hero-subheading{font-size:var(--font-size-lg);max-width:60ch;margin-inline:auto}.content-section{padding:var(--space-lg) var(--space-md);margin-bottom:var(--space-md)}.content-section h2{font-size:var(--font-size-xxl);margin-bottom:var(--space-md)}.content-section h3{font-size:var(--font-size-xl);margin-bottom:var(--space-xs)}.content-section p{margin-bottom:var(--space-sm);line-height:1.6}.content-section p:last-child{margin-bottom:0}.offerings{display:grid;gap:var(--space-lg)}.offering{padding:var(--space-md);border:1px solid var(--color-border);border-radius:var(--radius-md)}.offering h3{color:var(--color-primary)}@media (min-width:768px){.offerings{grid-template-columns:repeat(2,1fr)}}</style>
