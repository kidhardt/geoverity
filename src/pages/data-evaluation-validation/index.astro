---
import BasePageEn from "@/layouts/BasePageEn.astro";
import { t } from '@/i18n';
const lang = 'en';
const pageMeta = { title: "Data Evaluation & Validation - GeoVerity", description: "[Insert sentence here about validation services]", translationStatus: "approved", lastReviewed: new Date().toISOString() };
---
<BasePageEn {...pageMeta}>
<article>
<section class="hero" aria-labelledby="hero-heading"><h1 id="hero-heading">{t(lang, 'services.dataValidation.heroHeading')}</h1><p class="hero-subheading">{t(lang, 'services.dataValidation.heroSubheading')}</p></section>
<section class="content-section" aria-labelledby="overview-heading"><h2 id="overview-heading">{t(lang, 'services.dataValidation.overviewHeading')}</h2><p>{t(lang, 'services.dataValidation.overviewContent')}</p></section>
</article>
</BasePageEn>
<style>article{max-width:var(--content-width,70ch);margin-inline:auto}.hero{padding:var(--space-xl) var(--space-md);text-align:center;margin-bottom:var(--space-lg)}.hero h1{font-size:var(--font-size-xxxl);margin-bottom:var(--space-sm)}.hero-subheading{font-size:var(--font-size-lg);max-width:60ch;margin-inline:auto}.content-section{padding:var(--space-lg) var(--space-md);margin-bottom:var(--space-md)}.content-section h2{font-size:var(--font-size-xxl);margin-bottom:var(--space-md)}.content-section p{line-height:1.6}</style>
