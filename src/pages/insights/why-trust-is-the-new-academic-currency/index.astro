---
import BasePageEn from "@/layouts/BasePageEn.astro";
import { t } from '@/i18n';
import '@/styles/pages/insight-post.css';
import '@/styles/pages/article-detail.css';
const lang = 'en';
const post = t(lang, 'insightsPosts.trustCurrency');
const pageMeta = { title: `${post.title} - Insights - GeoVerity`, description: post.excerpt, translationStatus: "approved", lastReviewed: new Date().toISOString() };
---
<BasePageEn {...pageMeta}>
<article class="post">
<header class="post-header"><h1>{post.title}</h1><p class="post-meta">Category: <a href={`/insights/category/${post.category}/`}>{t(lang, `insightsCategories.${post.category.replace(/-/g, '')}.name`)}</a></p></header>
<section class="post-content"><p class="excerpt">{post.excerpt}</p><p>{post.content}</p></section>
<aside class="post-cta"><p><a href={post.readMoreLink} class="read-more-link">{post.readMoreText}</a></p><p class="cta-text">{post.ctaText}</p><a href="/contact/" class="cta-button">Contact Us</a></aside>
</article>
</BasePageEn>
