---
import BasePageEn from "@/layouts/BasePageEn.astro";
import { t } from '@/i18n';

const lang = 'en';
const pageMeta = {
  title: "Our Services - GeoVerity",
  description: "We help organizations build trust in AI systems and protect academic integrity. Choose the service that fits your needs.",
  translationStatus: "approved",
  lastReviewed: new Date().toISOString()
};
---

<BasePageEn {...pageMeta}>
  <article>
    <section class="hero" aria-labelledby="hero-heading">
      <h1 id="hero-heading">{t(lang, 'servicesHub.heroHeading')}</h1>
      <p class="hero-subheading">{t(lang, 'servicesHub.heroSubheading')}</p>
    </section>

    <section class="services-list" aria-labelledby="services-heading">
      <h2 id="services-heading" class="sr-only">Available Services</h2>

      <div class="service-card">
        <h3>
          <a href="/higher-education-consulting/">{t(lang, 'servicesHub.higherEdHeading')}</a>
        </h3>
        <p>{t(lang, 'servicesHub.higherEdDesc')}</p>
      </div>

      <div class="service-card coming-soon">
        <h3>{t(lang, 'servicesHub.dataHeading')}</h3>
        <p>{t(lang, 'servicesHub.dataDesc')}</p>
        <span class="badge">Coming Soon</span>
      </div>

      <div class="service-card coming-soon">
        <h3>{t(lang, 'servicesHub.evaluationHeading')}</h3>
        <p>{t(lang, 'servicesHub.evaluationDesc')}</p>
        <span class="badge">Coming Soon</span>
      </div>

      <div class="service-card coming-soon">
        <h3>{t(lang, 'servicesHub.governanceHeading')}</h3>
        <p>{t(lang, 'servicesHub.governanceDesc')}</p>
        <span class="badge">Coming Soon</span>
      </div>
    </section>
  </article>
</BasePageEn>

<style>
  article {
    max-width: var(--content-width, 70ch);
    margin-inline: auto;
  }

  .hero {
    padding: var(--space-xl) var(--space-md);
    text-align: center;
    margin-bottom: var(--space-lg);
  }

  .hero h1 {
    font-size: var(--font-size-xxxl);
    margin-bottom: var(--space-sm);
  }

  .hero-subheading {
    font-size: var(--font-size-lg);
    max-width: 60ch;
    margin-inline: auto;
  }

  .services-list {
    padding: var(--space-lg) var(--space-md);
    display: grid;
    gap: var(--space-lg);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .service-card {
    padding: var(--space-lg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    position: relative;
  }

  .service-card h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-sm);
  }

  .service-card h3 a {
    text-decoration: none;
    color: var(--color-primary);
  }

  .service-card h3 a:hover {
    text-decoration: underline;
  }

  .service-card p {
    line-height: 1.6;
    margin: 0;
  }

  .service-card.coming-soon {
    opacity: 0.7;
  }

  .service-card.coming-soon h3 {
    color: var(--color-text-secondary);
  }

  .badge {
    display: inline-block;
    margin-top: var(--space-sm);
    padding: var(--space-xs) var(--space-sm);
    background-color: var(--color-border);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-text-secondary);
  }

  @media (min-width: 768px) {
    .services-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
