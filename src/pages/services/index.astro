---
import BasePageEn from "@/layouts/BasePageEn.astro";
import { t } from '@/i18n';
import '@/styles/pages/services-hub.css';

const lang = 'en';
const pageMeta = {
  title: "Our Services - GeoVerity",
  description: "[Insert sentence here about AI data services for LLM development]",
  translationStatus: "approved",
  lastReviewed: new Date().toISOString()
};
---

<BasePageEn {...pageMeta}>
  <article>
    <section class="hero" aria-labelledby="hero-heading">
      <h1 id="hero-heading">{t(lang, 'servicesHub.heroHeading')}</h1>
      <p class="hero-subheading">{t(lang, 'servicesHub.heroSubheading')}</p>
    </section>

    <section class="services-list" aria-labelledby="services-heading">
      <h2 id="services-heading" class="sr-only">Available Services</h2>

      <div class="service-card">
        <h3><a href="/data-collection-enhancement/">{t(lang, 'servicesHub.dataCollectionHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.dataCollectionDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/data-annotation-labeling/">{t(lang, 'servicesHub.dataAnnotationHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.dataAnnotationDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/data-evaluation-validation/">{t(lang, 'servicesHub.dataValidationHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.dataValidationDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/model-training-fine-tuning/">{t(lang, 'servicesHub.modelTrainingHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.modelTrainingDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/benchmarking-model-evaluation/">{t(lang, 'servicesHub.benchmarkingHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.benchmarkingDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/ai-data-management-platform/">{t(lang, 'servicesHub.platformHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.platformDesc')}</p>
      </div>
    </section>
  </article>
</BasePageEn>

