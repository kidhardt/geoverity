---
import BasePageEs from "@/layouts/BasePageEs.astro";
import { t } from '@/i18n';
const lang = 'es';
const pageMeta = { title: "Evaluación Comparativa y Evaluación de Modelos - GeoVerity", description: "[Insertar oración aquí sobre servicios de evaluación comparativa]", translationStatus: "approved", lastReviewed: new Date().toISOString() };
---
<BasePageEs {...pageMeta}>
<article>
<section class="hero" aria-labelledby="hero-heading"><h1 id="hero-heading">{t(lang, 'services.benchmarking.heroHeading')}</h1><p class="hero-subheading">{t(lang, 'services.benchmarking.heroSubheading')}</p></section>
<section class="content-section" aria-labelledby="overview-heading"><h2 id="overview-heading">{t(lang, 'services.benchmarking.overviewHeading')}</h2><p>{t(lang, 'services.benchmarking.overviewContent')}</p></section>
</article>
</BasePageEs>
<style>article{max-width:var(--content-width,70ch);margin-inline:auto}.hero{padding:var(--space-xl) var(--space-md);text-align:center;margin-bottom:var(--space-lg)}.hero h1{font-size:var(--font-size-xxxl);margin-bottom:var(--space-sm)}.hero-subheading{font-size:var(--font-size-lg);max-width:60ch;margin-inline:auto}.content-section{padding:var(--space-lg) var(--space-md);margin-bottom:var(--space-md)}.content-section h2{font-size:var(--font-size-xxl);margin-bottom:var(--space-md)}.content-section p{line-height:1.6}</style>
