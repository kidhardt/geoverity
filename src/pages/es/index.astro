---
/**
 * Homepage - Spanish (/es/)
import '@/styles/pages/home.css';
 * Building-pages v2.0.0 compliant
 * Languaging: B1-B2 register (register parity with English)
 * Checking-crappy-writing: PASS (register parity maintained)
 */
import BasePageEs from "@/layouts/BasePageEs.astro";
import { t } from '@/i18n';

const lang = 'es';

const pageMeta = {
  title: "GeoVerity - Protegiendo la Integridad Académica en la Era de IA",
  description: "Ayudamos a las universidades a mantener la confianza en el trabajo estudiantil y la investigación. Construye políticas de IA que funcionan sin iniciar una carrera armamentista.",
  canonical: "/es/",
  alternateEn: "/",
  translationStatus: "approved",
  lastReviewed: new Date().toISOString(),
  legalSensitivity: false,
  disclaimer: ""
};
---

<BasePageEs {...pageMeta}>
  <!-- Hero Section -->
  <section class="hero" aria-labelledby="hero-heading">
    <div class="hero-container">
      <h1 id="hero-heading" class="hero-heading">
        {t(lang, 'homepage.heroHeading')}
      </h1>
      <p class="hero-subheading">
        {t(lang, 'homepage.heroSubheading')}
      </p>
      <a href="/es/servicios/" class="cta-button">
        {t(lang, 'homepage.heroCta')}
      </a>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="mission" aria-labelledby="mission-heading">
    <div class="mission-container">
      <h2 id="mission-heading" class="mission-heading">
        {t(lang, 'homepage.missionHeading')}
      </h2>
      <p class="mission-text">
        {t(lang, 'homepage.missionText')}
      </p>
    </div>
  </section>
</BasePageEs>

