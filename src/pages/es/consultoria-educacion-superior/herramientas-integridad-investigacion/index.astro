---
import BasePageEs from "@/layouts/BasePageEs.astro";
import { t } from '@/i18n';
const lang = 'es';
const pageMeta = { title: "Herramientas de Integridad en Investigación - GeoVerity", description: "Herramientas éticas para la transparencia y reproducibilidad en investigación.", translationStatus: "approved", lastReviewed: new Date().toISOString() };
---
<BasePageEs {...pageMeta}>
<article>
<section class="hero" aria-labelledby="hero-heading"><h1 id="hero-heading">{t(lang, 'higherEdSpokes.researchTools.heroHeading')}</h1><p class="hero-subheading">{t(lang, 'higherEdSpokes.researchTools.heroSubheading')}</p></section>
<section class="content-section" aria-labelledby="content-heading"><h2 id="content-heading" class="sr-only">Resumen</h2><p>{t(lang, 'higherEdSpokes.researchTools.contentPara')}</p><div class="react-island-placeholder"><!-- TODO: Componentes React para calculadora de valores p y herramienta de detección de sesgo se montarán aquí usando client:visible --></div></section>
</article>
</BasePageEs>
<style>article{max-width:var(--content-width,70ch);margin-inline:auto}.hero{padding:var(--space-xl) var(--space-md);text-align:center;margin-bottom:var(--space-lg)}.hero h1{font-size:var(--font-size-xxxl);margin-bottom:var(--space-sm)}.hero-subheading{font-size:var(--font-size-lg);max-width:60ch;margin-inline:auto}.content-section{padding:var(--space-lg) var(--space-md);margin-bottom:var(--space-md)}.content-section h2{font-size:var(--font-size-xxl);margin-bottom:var(--space-md)}.content-section p{margin-bottom:var(--space-sm);line-height:1.6}.sr-only{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);white-space:nowrap;border-width:0}.react-island-placeholder{margin-top:var(--space-lg);padding:var(--space-md);border:2px dashed var(--color-border);border-radius:var(--radius-md)}</style>
