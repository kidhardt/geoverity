---
import BasePageEs from "@/layouts/BasePageEs.astro";
import { ResearchIntegrityIsland } from "@/apps/research-integrity/Island";
import { getHigherEdSurface } from "@/data/loaders";

const surface = getHigherEdSurface("es");

const pageMeta = {
  title: "Página Placeholder (ES)",
  description: "Página temporal de andamiaje para GeoVerity 2026.",
  canonical: "/es/placeholder/",
  alternateEn: "/placeholder/",
  translationStatus: "placeholder",
  lastReviewed: "",
  legalSensitivity: false,
  disclaimer: ""
};
---

<BasePageEs {...pageMeta}>
  <section>
    <h1>{surface.title}</h1>
    <p>{surface.summary}</p>

    <aside style="font-size:0.8rem;opacity:0.7;">
      <p><strong>Última Revisión:</strong> {surface.lastReviewed || "TBD"}</p>
      <p><strong>Estado:</strong> {surface.translationStatus}</p>
      <p><strong>Aviso:</strong> {surface.disclaimer}</p>
    </aside>
  </section>

  <section>
    <h2>Vista Interactiva (Español)</h2>
    <p>Aquí se montará un módulo de integridad de investigación sensible.</p>

    <!-- React island mount (Español) -->
    <div>
      <!-- @astrojs/react rendering -->
      <ResearchIntegrityIsland client:idle lang="es" />
    </div>
  </section>
</BasePageEs>
