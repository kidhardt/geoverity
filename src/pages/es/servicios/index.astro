---
import BasePageEs from "@/layouts/BasePageEs.astro";
import { t } from '@/i18n';
import '@/styles/pages/services-hub.css';

const lang = 'es';
const pageMeta = {
  title: "Nuestros Servicios - GeoVerity",
  description: "[Insertar oración aquí sobre servicios de datos de IA para desarrollo de LLM]",
  translationStatus: "approved",
  lastReviewed: new Date().toISOString()
};
---

<BasePageEs {...pageMeta}>
  <article>
    <section class="hero" aria-labelledby="hero-heading">
      <h1 id="hero-heading">{t(lang, 'servicesHub.heroHeading')}</h1>
      <p class="hero-subheading">{t(lang, 'servicesHub.heroSubheading')}</p>
    </section>

    <section class="services-list" aria-labelledby="services-heading">
      <h2 id="services-heading" class="sr-only">Servicios Disponibles</h2>

      <div class="service-card">
        <h3><a href="/es/recopilacion-mejora-datos/">{t(lang, 'servicesHub.dataCollectionHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.dataCollectionDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/anotacion-etiquetado-datos/">{t(lang, 'servicesHub.dataAnnotationHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.dataAnnotationDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/evaluacion-validacion-datos/">{t(lang, 'servicesHub.dataValidationHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.dataValidationDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/entrenamiento-ajuste-modelos/">{t(lang, 'servicesHub.modelTrainingHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.modelTrainingDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/evaluacion-comparativa-modelos/">{t(lang, 'servicesHub.benchmarkingHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.benchmarkingDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/plataforma-gestion-datos-ia/">{t(lang, 'servicesHub.platformHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.platformDesc')}</p>
      </div>
    </section>
  </article>
</BasePageEs>

