---
import BasePageEs from "@/layouts/BasePageEs.astro";
import { t } from '@/i18n';

const lang = 'es';
const pageMeta = {
  title: "Nuestros Servicios - GeoVerity",
  description: "[Insertar oración aquí sobre servicios de datos de IA para desarrollo de LLM]",
  translationStatus: "approved",
  lastReviewed: new Date().toISOString()
};
---

<BasePageEs {...pageMeta}>
  <article>
    <section class="hero" aria-labelledby="hero-heading">
      <h1 id="hero-heading">{t(lang, 'servicesHub.heroHeading')}</h1>
      <p class="hero-subheading">{t(lang, 'servicesHub.heroSubheading')}</p>
    </section>

    <section class="services-list" aria-labelledby="services-heading">
      <h2 id="services-heading" class="sr-only">Servicios Disponibles</h2>

      <div class="service-card">
        <h3><a href="/es/recopilacion-mejora-datos/">{t(lang, 'servicesHub.dataCollectionHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.dataCollectionDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/anotacion-etiquetado-datos/">{t(lang, 'servicesHub.dataAnnotationHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.dataAnnotationDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/evaluacion-validacion-datos/">{t(lang, 'servicesHub.dataValidationHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.dataValidationDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/entrenamiento-ajuste-modelos/">{t(lang, 'servicesHub.modelTrainingHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.modelTrainingDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/evaluacion-comparativa-modelos/">{t(lang, 'servicesHub.benchmarkingHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.benchmarkingDesc')}</p>
      </div>

      <div class="service-card">
        <h3><a href="/es/plataforma-gestion-datos-ia/">{t(lang, 'servicesHub.platformHeading')}</a></h3>
        <p>{t(lang, 'servicesHub.platformDesc')}</p>
      </div>
    </section>
  </article>
</BasePageEs>

<style>
  article {
    max-width: var(--content-width, 70ch);
    margin-inline: auto;
  }

  .hero {
    padding: var(--space-xl) var(--space-md);
    text-align: center;
    margin-bottom: var(--space-lg);
  }

  .hero h1 {
    font-size: var(--font-size-xxxl);
    margin-bottom: var(--space-sm);
  }

  .hero-subheading {
    font-size: var(--font-size-lg);
    max-width: 60ch;
    margin-inline: auto;
  }

  .services-list {
    padding: var(--space-lg) var(--space-md);
    display: grid;
    gap: var(--space-lg);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .service-card {
    padding: var(--space-lg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    position: relative;
  }

  .service-card h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-sm);
  }

  .service-card h3 a {
    text-decoration: none;
    color: var(--color-primary);
  }

  .service-card h3 a:hover {
    text-decoration: underline;
  }

  .service-card p {
    line-height: 1.6;
    margin: 0;
  }

  .service-card.coming-soon {
    opacity: 0.7;
  }

  .service-card.coming-soon h3 {
    color: var(--color-text-secondary);
  }

  .badge {
    display: inline-block;
    margin-top: var(--space-sm);
    padding: var(--space-xs) var(--space-sm);
    background-color: var(--color-border);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-text-secondary);
  }

  @media (min-width: 768px) {
    .services-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
