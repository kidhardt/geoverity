---
import BasePageEn from "@/../src/layouts/BasePageEn.astro";
import { ResearchIntegrityIsland } from "@/apps/research-integrity/Island";
import { getHigherEdSurface } from "@/data/loaders";

const surface = getHigherEdSurface("en");

const pageMeta = {
  title: "Placeholder Page (EN)",
  description: "This is a scaffold placeholder page for GeoVerity 2026.",
  canonical: "/placeholder/",
  alternateEs: "/es/placeholder/",
  translationStatus: "placeholder",
  lastReviewed: "",
  legalSensitivity: false,
  disclaimer: ""
};
---

<BasePageEn {...pageMeta}>
  <section>
    <h1>{surface.title}</h1>
    <p>{surface.summary}</p>

    <aside style="font-size:0.8rem;opacity:0.7;">
      <p><strong>Last Reviewed:</strong> {surface.lastReviewed || "TBD"}</p>
      <p><strong>Status:</strong> {surface.translationStatus}</p>
      <p><strong>Disclaimer:</strong> {surface.disclaimer}</p>
    </aside>
  </section>

  <section>
    <h2>Interactive Preview (English)</h2>
    <p>This is where a high-sensitivity research integrity tool island will mount.</p>

    <!-- React island mount (English) -->
    <div>
      <!-- @astrojs/react rendering -->
      <ResearchIntegrityIsland client:idle lang="en" />
    </div>
  </section>
</BasePageEn>
