---
import BasePageEn from "@/layouts/BasePageEn.astro";
import { t } from '@/i18n';
import '@/styles/pages/contact.css';

const lang = 'en';
const pageMeta = {
  title: "Contact Us - GeoVerity",
  description: "Tell us about your needs. We'll respond within 24 hours.",
  translationStatus: "approved",
  lastReviewed: new Date().toISOString()
};
---

<BasePageEn {...pageMeta}>
  <article>
    <section class="hero" aria-labelledby="hero-heading">
      <h1 id="hero-heading">{t(lang, 'contact.heroHeading')}</h1>
      <p class="hero-subheading">{t(lang, 'contact.heroSubheading')}</p>
    </section>

    <section class="contact-form-section" aria-labelledby="form-heading">
      <h2 id="form-heading">{t(lang, 'contact.formHeading')}</h2>

      <div class="placeholder">
        <p>{t(lang, 'contact.placeholder')}</p>
      </div>

      <!-- TODO: React island for contact form will be mounted here -->
      <!-- See geoverity-102 for implementation details -->
    </section>
  </article>
</BasePageEn>

